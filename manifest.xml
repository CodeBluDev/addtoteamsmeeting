<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" xsi:type="MailApp">
  <Id>3ea7824c-6d87-41aa-9007-b9adfb5eba24</Id>
  <Version>1.8.18.0</Version>
  <ProviderName>CodeBlu Development</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="[v1.8.18] Add Teams Meeting to Location"/>
  <Description DefaultValue="Copies the Microsoft Teams meeting link into the Location field."/>
  <IconUrl DefaultValue="https://127.0.0.1:3000/assets/codeblu-teams-32.png?v=1.8.2"/>
  <HighResolutionIconUrl DefaultValue="https://127.0.0.1:3000/assets/codeblu-teams-128.png?v=1.8.2"/>
  <SupportUrl DefaultValue="https://codebludev.com/contact"/>
  <AppDomains>
    <AppDomain>https://codebludev.github.io</AppDomain>
    <AppDomain>https://127.0.0.1:3000</AppDomain>
    <AppDomain>https://graph.microsoft.com</AppDomain>
    <AppDomain>https://login.microsoftonline.com</AppDomain>
    <AppDomain>https://alcdn.msauth.net</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.3"/>
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://127.0.0.1:3000/commands.html?v=1.8.2"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadWriteMailbox</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
  <DisableEntityHighlighting>false</DisableEntityHighlighting>
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.3">
        <bt:Set Name="Mailbox" MinVersion="1.3"/>
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url"/>
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="GroupLabel"/>
                <Control xsi:type="Button" id="ActionButton">
                  <Label resid="ActionButton.Label"/>
                  <Supertip>
                    <Title resid="ActionButton.Label"/>
                    <Description resid="ActionButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>addTeamsLinkToLocation</FunctionName>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://127.0.0.1:3000/assets/codeblu-teams-16.png?v=1.8.2"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://127.0.0.1:3000/assets/codeblu-teams-32.png?v=1.8.2"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://127.0.0.1:3000/assets/codeblu-teams-80.png?v=1.8.2"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://127.0.0.1:3000/commands.html?v=1.8.2"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="Teams Tools"/>
        <bt:String id="ActionButton.Label" DefaultValue="[v1.8.18] Add Teams Meeting to Location"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="ActionButton.Tooltip" DefaultValue="Copies the Microsoft Teams meeting link into the Location field."/>
        <bt:String id="AppLongDescription" DefaultValue="CodeBlu Development is a U.S.-based software and AI engineering studio specializing in mission-critical systems for enterprises, public safety, and regulated organizations. Contact: support@codebludev.com | +1 (513) 655-7770"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
